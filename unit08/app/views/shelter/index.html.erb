<p id="notice"><%= notice %></p>

<h1>Listing Pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Description</th>
      <th>Type</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.age %></td>
        <td><%= pet.description %></td>
        <td><%= pet.pet_type %></td>
        <td><%= pet.Pet_Status %></td>
        <td><%= button_to 'Select Pet', selected_pets_path(pet_id: pet) %></td>
       </tr>
    <% end %>
  </tbody>
</table>

<br>